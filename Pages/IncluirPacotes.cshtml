@page
@model TuristicaAt.Pages.IncluirPacotes

@{
    Layout = "Shared/_Layout";
}

<div class="row pt-5">
<div class="col-md-4">
    <form method="post">
        <h4>Inclusão Pacote de Viagem</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="NovoPacote.Titulo" class="control-label"></label>
            <input asp-for="NovoPacote.Titulo" class="form-control" />
            <span asp-validation-for="NovoPacote.Titulo" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="NovoPacote.Preco" class="control-label"></label>
            <input asp-for="NovoPacote.Preco" class="form-control" />
            <span asp-validation-for="NovoPacote.Preco" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NovoPacote.DataDeInicio" class="control-label"></label>
            <input asp-for="NovoPacote.DataDeInicio" class="form-control" type="date"/>
            <span asp-validation-for="NovoPacote.DataDeInicio" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 mb-3">
            <label asp-for="NovoPacote.Destino" class="control-label"></label>
            <select class="form-select" asp-for="NovoPacote.DestinoId"
                    asp-items="Model.Destinos">
                <option value="">Selecione uma opção</option>
            </select>
            <span asp-validation-for="NovoPacote.Destino"class="text-danger"></span>
        </div>
        
        <div class="form-group mt-4">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
</div>
</div>
