@page
@model TuristicaAt.Pages.Edit

@{
    Layout = "Shared/_Layout";
}

<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Alteração de Pacote</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PacoteTuristico.Id" />
            
            <div class="form-group">
                <label asp-for="PacoteTuristico.Titulo" class="control-label"></label>
                <input asp-for="PacoteTuristico.Titulo" class="form-control" />
                <span asp-validation-for="PacoteTuristico.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacoteTuristico.Preco" class="control-label"></label>
                <input asp-for="PacoteTuristico.Preco" class="form-control" />
                <span asp-validation-for="PacoteTuristico.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacoteTuristico.DataDeInicio" class="control-label"></label>
                <input asp-for="PacoteTuristico.DataDeInicio" class="form-control" type="date"/>
                <span asp-validation-for="PacoteTuristico.DataDeInicio" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3 mb-3">
                <label asp-for="PacoteTuristico.Destino" class="control-label"></label>
                <select class="form-select" asp-for="PacoteTuristico.DestinoId"
                        asp-items="Model.Destinos">
                    <option value="">Selecione uma opção</option>
                </select>
                <span asp-validation-for="PacoteTuristico.Destino"class="text-danger"></span>
            </div>
            
            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <input type="submit" value="Excluir" class="btn btn-primary" asp-page-handler="Delete" />
            </div>
            
        </form>
    </div>
</div>